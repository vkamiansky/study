<Window x:Class="ImageEditor.filters.SharpenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Background="{DynamicResource BackgroundBrush}"
        ResizeMode="NoResize"
        Title="Sharpen Blur" Height="150" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0">
            <Label Foreground="White" Name="RadLabel">Values: </Label>
            <Slider ValueChanged="Radius_OnValueChanged" Name="Radius" Minimum="-1000" Maximum="1000" Value="0" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Click="OnCancel" Width="60">Cancel</Button>
            <Button Click="OnOk" Width="60" Margin="10,0,0,0">OK</Button>
        </StackPanel>
    </Grid>
</Window>
