<Window x:Class="ImageEditor.HistogramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageEditor"
        xmlns:control="clr-namespace:ImageEditor.control"
        mc:Ignorable="d"
        WindowState="Normal"
        ResizeMode="CanResize"
        Background="{DynamicResource BackgroundBrush}"
        Title="HistogramWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <control:ImageView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="Canvas"
                           Grid.Column="0" Grid.Row="0" Stretch="None"/>

        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1">
            <RadioButton Margin="5,0" Foreground="White">All</RadioButton>
            <RadioButton Margin="5,0" Foreground="White">Red</RadioButton>
            <RadioButton Margin="5,0" Foreground="White">Green</RadioButton>
            <RadioButton Margin="5,0" Foreground="White">Blue</RadioButton>
            <RadioButton Margin="5,0" Foreground="White">GrayScale</RadioButton>
        </StackPanel>
    </Grid>
</Window>
