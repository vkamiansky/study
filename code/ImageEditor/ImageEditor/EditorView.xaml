<UserControl x:Class="ImageEditor.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="BgBrush" Color="{DynamicResource MenuBackgroundColor}"/>
            <SolidColorBrush x:Key="DividerBrush" Color="{DynamicResource DividerColor}"/>
            <SolidColorBrush x:Key="WorkSpaceBgBrush" Color="{DynamicResource WorkSpaceBackground}"/>
            <Image x:Key="close" Source="res/close_icon.png"/>
            <Style x:Key="MenuStyle" TargetType="{x:Type Menu}">
                <Setter Property="OverridesDefaultStyle"
          Value="True" />
                <Setter Property="SnapsToDevicePixels"
          Value="True" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Menu}">
                            <Border x:Name="MainMenu" BorderThickness="0">
                                <Border.Background>
                                    <SolidColorBrush Color="{DynamicResource MenuBackgroundColor}"/>
                                </Border.Background>
                                <StackPanel ClipToBounds="True"
                      Orientation="Horizontal"
                      IsItemsHost="True" />
                            </Border>
                        </ControlTemplate>

                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,0" Background="{StaticResource BgBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Menu Style="{StaticResource MenuStyle}" Grid.Column="0" Margin="0,0,0,0">

                <MenuItem Header="_File" Template="{DynamicResource MenuItemControlTemplate1}">
                    <MenuItem Header="_New…"/>
                    <MenuItem Header="_Open…"/>
                    <Separator />
                    <MenuItem Header="_Close"/>
                    <MenuItem Header="_Save"/>
                    <MenuItem Header="_Save As…"/>
                    <Separator />
                    <MenuItem Header="_Exit"/>
                </MenuItem>
                <MenuItem Header="Filter" Template="{DynamicResource MenuItemControlTemplate1}">
                    <MenuItem Header="Brightness"/>
                    <MenuItem Header="Contrast"/>
                </MenuItem>
            </Menu>

            <Image Grid.Column="1" Source="res/close_icon.png" Width="12" Height="12" Stretch="Fill" Margin="0,0,6,0">

            </Image>

        </Grid>

        <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="0,0,0,0" Background="{StaticResource BgBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Rectangle Fill="{StaticResource DividerBrush}" Height="1"/>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="1" Margin="0,0,0,0" Background="{StaticResource BgBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Rectangle Fill="{StaticResource DividerBrush}" Height="1"/>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1" Margin="0,0,0,0" Background="{StaticResource WorkSpaceBgBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <Rectangle Grid.Row="0" Fill="{StaticResource DividerBrush}" Height="1"/>

            <Image Margin="10" Grid.Row="1" Source="{Binding ImageSource.Value}" Stretch="None"/>

            <Rectangle Grid.Row="2" Fill="{StaticResource BgBrush}" Height="10"/>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="1" Margin="0,0,0,0" Background="{StaticResource BgBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Rectangle Fill="{StaticResource DividerBrush}" Height="1"/>
        </Grid>

    </Grid>
</UserControl>
