<Application x:Class="ImageEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:integration="clr-namespace:ImageEditor.Integration;assembly=ImageEditor.Integration"
             xmlns:local="clr-namespace:ImageEditor"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <integration:CompositionRoot x:Key="CompositionRoot"/>
            <ResourceDictionary.MergedDictionaries >
                <ResourceDictionary Source="res/colors.xaml"/>
                <ResourceDictionary Source="res/menu_item_style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
